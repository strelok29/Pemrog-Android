<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rifqi.finalproject.ViginereCipher">

    <Button
        android:id="@+id/encryptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="Encrypt"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="184dp"
        android:layout_below="@+id/keyEditText"
        android:layout_toStartOf="@+id/resultText"
        android:layout_marginEnd="7dp" />

    <EditText
        android:id="@+id/cipherEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:hint="Enter Text"
        android:inputType="textPersonName"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="31dp" />

    <EditText
        android:id="@+id/keyEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cipherEditText"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Enter Key"
        android:inputType="textPersonName"
        android:textAllCaps="true"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="94dp" />

    <Button
        android:id="@+id/decryptButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/encryptButton"
        android:layout_centerHorizontal="true"
        android:text="Decrypt"/>

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_alignBaseline="@+id/decryptButton"
        android:layout_alignBottom="@+id/decryptButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:hint="Result Text"
        android:textAlignment="center"
        android:textStyle="bold" />
</android.widget.RelativeLayout>
